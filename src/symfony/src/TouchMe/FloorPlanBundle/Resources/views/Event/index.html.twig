{% extends 'TouchMeFloorPlanBundle:Scaffolding:scaffolding.html.twig' %}

{% block main %}

<h2>Alle Veranstaltungen <small><a href="{{ path('event_new')}}"><span class="glyphicon glyphicon-plus"></span> Veranstaltung hinzufügen</a></small></h2>
<p>Hier finden Sie alle kommenden Veranstaltungen.</p>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Datum</th>
      <th>Titel</th>
      <th>Raum</th>
      <th>Beschreibung</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for event in events %}
    <tr>
      <td width="7%">{{ loop.index }}</td>
      <td width="25%">
        am {{ event.startdate }} von {{ event.starttime }} - {{ event.endtime }} 
      </td>
      <td width="25%">{{ event.title }}</td>
      <td width="7%">{{ event.location.number }}</td>
      <td>{{ event.description }}</td>
      <td width="7%">
        <a href="{{ path('event_edit', {'id' : event.id }) }}">
          <span class="glyphicon glyphicon-edit"></span>
        </a> &nbsp; &nbsp; 
        <a href="{{ path('event_remove', {'id' : event.id }) }}">
         <span class="glyphicon glyphicon-remove"></span>
        </a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

<p><a href="{{ path('event_remove_all')}}"><span class="glyphicon glyphicon-remove"></span> Alle Veranstaltungen löschen</a></p>

{% endblock %}