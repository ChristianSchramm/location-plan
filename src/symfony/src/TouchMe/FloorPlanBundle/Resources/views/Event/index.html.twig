{% extends 'TouchMeFloorPlanBundle:Scaffolding:scaffolding.html.twig' %}

{% block main %}

<h2>Alle Veranstaltungen <small><a href="{{ path('event_new')}}"><span class="glyphicon glyphicon-plus"></span> Veranstaltung hinzuf√ºgen</a></small></h2>
<p>Hier finden Sie alle kommenden Veranstaltungen.</p>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Datum</th>
      <th>Name</th>
      <th>Beschreibung</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for event in events %}
    <tr>
      <td>{{ loop.index }}</td>
      <td>
        von {{ event.starttime|date('d.m.Y') }} {{ event.starttime|date('h:i') }}<br>
        bis {{ event.endtime|date('d.m.Y') }} {{ event.endtime|date('h:i') }}
      </td>
      <td>{{ event.title }}</td>
      <td>{{ event.description }}</td>
      <td>
        <a href="{{ path('event_edit', {'id' : event.id }) }}">
          <span class="glyphicon glyphicon-edit"></span>
        </a> &nbsp; &nbsp; 
        <a href="{{ path('event_remove', {'id' : event.id }) }}">
         <span class="glyphicon glyphicon-remove"></span>
        </a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}