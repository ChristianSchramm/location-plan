{% extends 'TouchMeFloorPlanBundle:Scaffolding:scaffolding.html.twig' %}

{% block main %}

<h2>Alle Räume</h2>
<p>Hier finden Sie alle Räume.</p>
<p><a href="{{ path('location_new')}}"><span class="glyphicon glyphicon-plus"></span> Raum hinzufügen</a></p>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Number</th>
      <th>Raum</th>
      <th>Beschreibung</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for location in locations %}
    <tr>
      <td>{{ loop.index }}</td>
      <td>{{ location.number }}</td>
      <td>{{ location.type }}</td>
      <td>{{ location.description }}</td>
      <td><a href="{{ path('location_edit', {'id' : location.id }) }}"><span class="glyphicon glyphicon-edit"></span></a> &nbsp; &nbsp; <a href="{{ path('location_remove', {'id' : location.id }) }}"><span class="glyphicon glyphicon-remove"></span></a></td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}