{% extends 'TouchMeFloorPlanBundle:Scaffolding:scaffolding.html.twig' %}

{% block main %}

<h2>Alle Räume <small><a href="{{ path('location_new')}}"><span class="glyphicon glyphicon-plus"></span> Raum hinzufügen</a></small></h2>
<p>Hier finden Sie alle Räume. </p>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Number</th>
      <th>Raum</th>
      <th>Beschreibung</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for location in locations %}
    <tr>
      <td width="7%">{{ loop.index }}</td>
      <td width="20%">{{ location.number }}</td>
      <td width="20%">{{ location.type }}</td>
      <td>{{ location.description }}</td>
      <td width="7%">
        <a href="{{ path('location_edit', {'id' : location.id }) }}">
          <span class="glyphicon glyphicon-edit"></span>
        </a> &nbsp; &nbsp; 
        <a href="{{ path('location_remove', {'id' : location.id }) }}">
         <span class="glyphicon glyphicon-remove"></span>
        </a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}