{% extends 'LocationPlanBundle::Scaffolding/scaffolding.html.twig' %}

{% block main %}
{% if site is defined %}
<h2>{{ site.content|raw }}</h2>
{% else %}

<h2>Alle Veranstaltungen</h2>
<p>Hier finden Sie alle kommenden Veranstaltungen.</p>


<table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Datum</th>
          <th>Name</th>
          <th>Beschreibung</th>
        </tr>
      </thead>
      <tbody>
      {% for event in events %}
        <tr>
          <td>{{ loop.index }}</td>
          <td>{{ event.date }} {{ event.time }}</td>
          <td>{{ event.name }}</td>
          <td>{{ event.description }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

{% endif %}

<p>&nbsp;</p>
<p>&nbsp;</p>
<p>&nbsp;</p>

{% endblock %}